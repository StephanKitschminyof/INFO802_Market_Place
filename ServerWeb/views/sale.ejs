
  <div class="container">
    <% 
      var size = products.length;
      for(var i=0; i<size; i++)
      { 
        if(i == 0){ %>
          <div class="row">
        <%}
        if(i == 3){%>
          </div>
       <% }
        if(i>3 && i%4==0){%>
          <div class="row">
        <%}
        if(i>6 && (i-3)%4==0){%>
          </div>
        <%}%>
        <div class="col-xs-3 col-sm-3 col-md-3 sell-div">
          <img class="carousel-img" src="<%= products[i].pictureLink%>" alt="Image du livre" style="height: 350px;">
          <p><%= products[i].name %></p>
          <p><%= products[i].title %></p>
          <p><%= products[i].author %></p>
          <p><%= products[i].price %> â‚¬</p>
          <form action="buy" method="POST">
            <input type="hidden" id="idProduct" name="idProduct" value="<%= products[i].id %>">
            <input type="submit" value="Buy">  
          </form>
        </div>
        
      <%} 
    %>
  </div>

 
